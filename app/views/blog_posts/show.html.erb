


  <div class="blogshow">
    
        
        <p id="notice"><%= notice %></p>        
        
        <p>
          <strong>Title:</strong>
          <%= @blog_post.title %>
        </p>
        
        <p>
          <strong>Author:</strong>
          <%= @blog_post.user.username %>
        </p>
        
        <p>
          <strong>Created on:</strong>  
          <%=@blog_post.created_at %>
        </p>
        
        <p>
          <strong>Blog entry:</strong>
          <%= @blog_post.blog_entry %>
        </p>
        
        <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> 
        
        <%= render 'comments/form' %>
        
        <div class="card blue-grey darkened-1">
          <div class="card-content">
            <span class="card-title black-text">
              Comments
            </span>
              <% @blog_post.comments.each do |comment| %>
              <p><b><%=comment.user.username%></b> said:</p>
              <p><%=comment.comment_entry%></p>
              <%end%>
          </div>
        </div>
        
      <%= link_to 'Back', blog_posts_path, class:"waves-effect waves-light btn white-text" =%>   
  </div>      
        
