<p id="notice"><%= notice %></p>

<h1>Listing Blog Posts</h1>

    <div class="row">

      <% @blog_posts.each do |blog_post| %>

        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">
              <%= link_to blog_post.title, blog_post, class:"white-text" %>
              </span>
              <i>by <%= blog_post.user.username %> </i>
              <p><%= blog_post.blog_entry[0..25] %>...
              [<%=link_to 'Show More', blog_post, class:"yellow-text" %>]
              </p>
              
            </div>
            <div class="card-action">
              <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
              <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
    <% end %>
    </div>

<br>
<%= link_to 'New Blog post', new_blog_post_path, class:"waves-effect waves-light btn white-text" =%>
